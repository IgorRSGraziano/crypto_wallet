<p style="color: green"><%= notice %></p>

<h1>Mining types</h1>

<table id="mining_types" class="border-collapse table-fixed w-full text-sm">
  <thead class="bg-slate-50 shadow-md">
  <tr>
    <% %w[Description Acronym Actions].each do |e| %>
      <th class="border-b dark:border-slate-600 break-words font-medium text-center p-1 pt-6 pt-0 pb-3 text-slate-400 dark:text-slate-200 text-left">
        <%= e %>
      </th>
    <% end %>
  </tr>
  </thead>
  <tbody class="bg-white dark:bg-slate-800">
  <% @mining_types.each do |miningType| %>
    <tr>
      <% [miningType.description, miningType.acronym, link_to("Show this coin", miningType)].each do |e| %>
        <td class="border-b border-slate-100 break-words dark:border-slate-700 p-4 px-1 m-auto text-center text-slate-500 dark:text-slate-400">
          <%= e %>
        </td>
      <% end %>
    </tr>
  <% end %>
  </tbody>
</table>
<%= link_to "New Mining Type", new_mining_type_path, class: "float-right pt-6 mr-3 font-bold underline" %>
